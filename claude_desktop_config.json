{
  "tools": {
    "restaurant_menu_api": {
      "endpoints": {
        "get_menu_categories": {
          "method": "POST",
          "url": "http://localhost:8000/menu/categories",
          "description": "Get all menu categories for a restaurant",
          "parameters": {
            "type": "object",
            "properties": {
              "restaurant_id": {
                "type": "integer",
                "description": "The ID of the restaurant"
              },
              "branch_id": {
                "type": "integer",
                "description": "The ID of the branch"
              },
              "brand_id": {
                "type": "string",
                "description": "The ID of the brand"
              }
            },
            "required": ["restaurant_id", "branch_id", "brand_id"]
          }
        },
        "get_category_items": {
          "method": "POST",
          "url": "http://localhost:8000/menu/items",
          "description": "Get all items for a specific menu category",
          "parameters": {
            "type": "object",
            "properties": {
              "restaurant_id": {
                "type": "integer",
                "description": "The ID of the restaurant"
              },
              "branch_id": {
                "type": "integer",
                "description": "The ID of the branch"
              },
              "brand_id": {
                "type": "string",
                "description": "The ID of the brand"
              },
              "category_name": {
                "type": "string",
                "description": "The name of the category to get items for"
              }
            },
            "required": ["restaurant_id", "branch_id", "brand_id", "category_name"]
          }
        }
      }
    }
  },
  "mcpServers": {
    "linear-mcp-server": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "linear-mcp-server",
        "--config",
        "\"{\\\"linearApiKey\\\":\\\"{\\\\\\\"method\\\\\\\":\\\\\\\"initialize\\\\\\\",\\\\\\\"params\\\\\\\":{\\\\\\\"protocolVersion\\\\\\\":\\\\\\\"2024-11-05\\\\\\\",\\\\\\\"capabilities\\\\\\\":{\\\\\\\"tools\\\\\\\":true,\\\\\\\"prompts\\\\\\\":false,\\\\\\\"resources\\\\\\\":true,\\\\\\\"logging\\\\\\\":false,\\\\\\\"roots\\\\\\\":{\\\\\\\"listChanged\\\\\\\":false}},\\\\\\\"clientInfo\\\\\\\":{\\\\\\\"name\\\\\\\":\\\\\\\"cursor-vscode\\\\\\\",\\\\\\\"version\\\\\\\":\\\\\\\"1.0.0\\\\\\\"}},\\\\\\\"jsonrpc\\\\\\\":\\\\\\\"2.0\\\\\\\",\\\\\\\"id\\\\\\\":0}\\\"}\""
      ]
    },
    "restaurant-menu-server": {
      "command": "docker",
      "args": [
        "run",
        "-p",
        "8000:8000",
        "--env-file",
        "C:\\Users\\harsh\\Desktop\\mcp_server_client\\mcp-server-demo\\.env",
        "restaurant-menu-api"
      ]
    }
  }
} 